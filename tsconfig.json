{
  "compilerOptions": {
    "moduleResolution": "node",
    "declarationDir": "dist/types",
    "target": "es5",
    "module": "es2015",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      // otherwise schema generation fails with:
      // Cannot find name 'Window'
      "dom"
    ],
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": false,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist/lib",
    "typeRoots": [
      "../../node_modules/@types",
      "node_modules/@types",
      "src/typings"
    ],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react"
  },
  "include": [
    "src"
  ]
}
